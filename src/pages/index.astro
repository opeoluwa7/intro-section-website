---
import Layout from "../layouts/Layout.astro";
import Header from "../layouts/Header.astro";
import Hero from "../layouts/Hero.astro";
import Footer from "../layouts/Footer.astro";
import deskHero from "../assets/image-hero-desktop.png";
---

<Layout>
	<div class="h-full flex flex-col gap-8 !px-4 md:!px-12">
		<Header />
		<div class="flex flex-col md:flex-row items-center justify-between gap-8">
			<span class="flex flex-col items-center sm:h-full justify-evenly gap-8 md:gap-0">
				<Hero />
				<Footer />
			</span>

			<div>
				<img
					loading="lazy"
					class="img hidden md:block !h-[40rem]"
					src={deskHero.src}
					alt="hero image"
				/>
			</div>
		</div>
	</div>
</Layout>
